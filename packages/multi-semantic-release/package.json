{
    "name": "@anolilab/multi-semantic-release",
    "version": "2.0.3",
    "description": "A multi semantic release tool for a monorepo.",
    "repository": {
        "type": "git",
        "url": "https://github.com/anolilab/semantic-release.git",
        "directory": "packages/multi-semantic-release"
    },
    "license": "0BSD",
    "author": "Dave Houlbrooke <dave@shax.com>",
    "maintainers": [
        {
            "name": "Daniel Bannert",
            "email": "d.bannert@anolilab.de"
        }
    ],
    "type": "module",
    "exports": {
        ".": "./lib/multi-semantic-release.js",
        "./*": "./*",
        "./package.json": "./package.json"
    },
    "bin": {
        "multi-semantic-release": "./bin/cli.js"
    },
    "files": [
        "CHANGELOG.md",
        "README.md",
        "bin",
        "lib"
    ],
    "scripts": {
        "build": "echo 'There is no need for build' && exit 0",
        "build:prod": "echo 'There is no need for build' && exit 0",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "echo 'There is no need for dev' && exit 0",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint . --fix",
        "lint:packagejson": "publint --strict",
        "lint:types": "tsc --noEmit || exit 0",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@semrel-extra/topo": "^1.14.1",
        "blork": "^9.3.0",
        "cosmiconfig": "^9.0.0",
        "debug": "^4.4.1",
        "detect-indent": "^7.0.1",
        "detect-newline": "^4.0.1",
        "execa": "^9.6.0",
        "git-log-parser": "^1.2.1",
        "lodash-es": "^4.17.21",
        "resolve-from": "^5.0.0",
        "semver": "^7.7.2",
        "signale": "^1.4.0",
        "stream-buffers": "^3.0.3",
        "yargs": "18.0.0"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^16.2.25",
        "@anolilab/semantic-release-clean-package-json": "3.0.3",
        "@anolilab/semantic-release-pnpm": "2.0.3",
        "@secretlint/secretlint-rule-preset-recommend": "^11.2.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "13.0.1",
        "@semantic-release/exec": "^7.1.0",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^11.0.5",
        "@semantic-release/release-notes-generator": "14.1.0",
        "@types/node": "24.3.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "cross-env": "^10.0.0",
        "eslint": "^9.35.0",
        "eslint-plugin-you-dont-need-lodash-underscore": "6.14.0",
        "file-url": "^4.0.0",
        "publint": "^0.3.12",
        "rimraf": "^6.0.1",
        "secretlint": "11.2.0",
        "semantic-release": "^24.2.7",
        "tempy": "^3.1.0",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "peerDependencies": {
        "semantic-release": ">=22.0.3"
    },
    "engines": {
        "node": ">=20.8.1"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
